{
  "name": "project-name",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && tsx build.mts",
    "graphql:generate": "graphql-codegen --config codegen.json",
    "lint": "eslint . --max-warnings 0 --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "schema:create": "npx wgc subgraph create project-name --routing-url http://domain.com:port/graphql",
    "schema:publish": "npx wgc subgraph publish project-name --schema ./src/generated/schema.graphql",
    "start": "ENV_FILE=../../.env tsx src/main.mts",
    "typescript:check": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "4.11.0",
    "@graphql-tools/federation": "2.2.10",
    "@graphql-tools/merge": "9.0.7",
    "@graphql-tools/schema": "10.0.6",
    "@graphql-tools/utils": "10.5.4",
    "@types/body-parser": "1.19.5",
    "body-parser": "1.20.3",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "graphql": "16.9.0",
    "graphql-middleware": "6.1.35",
    "graphql-scalars": "1.23.0",
    "graphql-ws": "5.16.0",
    "pino": "9.4.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.12.0",
    "@graphql-codegen/add": "5.0.3",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/schema-ast": "4.1.0",
    "@graphql-codegen/typescript": "4.1.0",
    "@graphql-codegen/typescript-graphql-request": "6.2.0",
    "@graphql-codegen/typescript-resolvers": "4.3.0",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/cookie-parser": "1.4.7",
    "@types/cookies": "0.9.0",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "22.7.5",
    "@types/ws": "8.5.12",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "8.8.1",
    "esbuild": "0.24.0",
    "eslint": "9.12.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.6",
    "pino-pretty": "11.2.2",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.3",
    "tsx": "4.19.1",
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">=22",
    "npm": "*",
    "yarn": "Use npm"
  }
}
