{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && tsx build.mts",
    "graphql:generate": "graphql-codegen --config codegen.ts",
    "lint": "eslint . --max-warnings 0 --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "schema:create": "npx wgc subgraph create {{projectName}} --label visibility={{apiType}} --routing-url {{routingUrl}}",
    "schema:publish": "npm run graphql:generate && npx wgc subgraph publish {{projectName}} --schema ./src/generated/schema.graphql",
    "start": "ENV_FILE=../../.env tsx src/main.mts",
    "test": "vitest run",
    "typescript:check": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "5.2.0",
    "@as-integrations/express5": "1.1.2",
    "@graphql-tools/federation": "4.2.6",
    "@graphql-tools/merge": "9.1.6",
    "@graphql-tools/schema": "10.0.30",
    "@graphql-tools/utils": "10.11.0",
    "@types/body-parser": "1.19.6",
    "body-parser": "2.2.1",
    "cookie-parser": "1.4.7",
    "dayjs": "1.11.19",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "graphql": "16.12.0",
    "graphql-middleware": "6.1.35",
    "graphql-scalars": "1.25.0",
    "graphql-ws": "6.0.6",
    "pino": "10.1.0",
    "ws": "8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@graphql-codegen/add": "6.0.0",
    "@graphql-codegen/cli": "6.1.0",
    "@graphql-codegen/schema-ast": "5.0.0",
    "@graphql-codegen/typescript": "5.0.7",
    "@graphql-codegen/typescript-graphql-request": "6.3.0",
    "@graphql-codegen/typescript-resolvers": "5.1.5",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/cookie-parser": "1.4.10",
    "@types/cookies": "0.9.2",
    "@types/express": "5.0.6",
    "@types/node": "25.0.3",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "pino-pretty": "13.1.3",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "2.5.20",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=22",
    "npm": "*",
    "yarn": "Use npm"
  }
}
